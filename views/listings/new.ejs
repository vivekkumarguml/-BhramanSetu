<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <br><br>
    <h3>Create a New Listing</h3>
      <form  method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Add a catch Title" type="text" class="form-control" required>
        <div class="valid-feedback">Title looks good!</div>     <!--  valid-feedback is a bootstrap class which we have used here -->
        </div>
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]"  type="text"  class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter a short description</div>    <!--  valid-feedback is a bootstrap class which we have used here -->
        </div>
        
        
        <div class="mb-3 ">
        <label for="image" class="form-label">Upload Listing Image </label>
        <input name="listing[image]" placeholder="enter image URL/Link" type="file" class="form-control">
         required
        </div> 

        <div class="row">
        <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="1200" type="number" class="form-control" required>
        <div class="invalid-feedback">Price should be valid</div>        <!--  invalid-feedback is a bootstrap class which we have used here -->
        </div>

        <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="India" type="text"  class="form-control" required>
        <div class="invalid-feedback">Country name should be valid</div>     <!--  invalid-feedback is a bootstrap class which we have used here -->
        </div>
        </div>   
       
        <div class="mb-3">
        <label for="country" class="form-label">Location</label>
        <input name="listing[location]" placeholder="Jaipur-Rajasthan" type="text"  class="form-control" required>
        <div class="invalid-feedback">Location should be valid</div>             <!--  invalid-feedback is a bootstrap class which we have used here -->
        </div>
        <button class="btn btn-dark add-btn mt-3">ADD</button>
        <br><br>
      </form>
    </div>
  </div>
</body>

